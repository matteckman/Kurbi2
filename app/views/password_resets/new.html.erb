<section id="reset_password">
	<h2>Reset Password</h2>
		
	<%= form_tag password_resets_path, :method => :post do %>
	  <div class="field">
	    <%= label_tag :email %><br/>
	    <%= text_field_tag :email, params[:email] %>
	  </div>
	  <div class="actions"><%= submit_tag "Reset Password", :class => "button round" %></div>
	<% end %>
</section>