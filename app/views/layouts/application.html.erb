<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="wrap">
		<%= render 'layouts/header' %>
		<div id="main">
			<% flash.each do |key, value| %>
			<div class="flash <%= key %> round"><%= value %></div>
			<% end %>
			<%= yield %>
		</div><!--#main-->
	</div><!--#wrap-->
	<%= render 'layouts/footer' %>
</body>
</html>
