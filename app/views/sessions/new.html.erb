<section id="new_session">
	<h2>Sign in</h2>
	
	<%= form_tag sessions_path do %> 
	  <div class="field">
	    <%= label_tag :email %><br />
	    <%= text_field_tag :email, params[:email] %>
	  </div>
	  <div class="field">
	    <%= label_tag :password %><br />
	    <%= password_field_tag :password %>
	  </div>
	  <!--begin FORGOTTEN-PASSWORD-->
	  <p><%= link_to "forgotten password?", new_password_reset_path %></p>
	  <!--end FORGOTTEN-PASSWORD-->
	  <!--begin REMEMBER-ME-->
	  <div class="check-box">
	  	<%= check_box_tag :remember_me, 1, params[:remember_me] %>
	  	<%= label_tag :remember_me %>
	  </div>
	 <!-- end REMEMBER-ME-->
	  <div class="actions">
	  	<%= submit_tag "Log in", :class => "button round" %>
	  </div><!--.actions-->
	<% end %>	
	<p>Not a member? <%= link_to "Sign up", signup_path %></p>
</section><!--#new_session-->



