<!--This is the new user's sign up form page-->
<section class="hero-unit">
		<h2>Sign up</h2>
		<%= simple_form_for @patient, :html => { :class => 'form-vertical' } do |f| %>
			<%= f.input :first_name, :placeholder => "first name", :label => false %>
			<%= f.input :last_name, :placeholder => "last name", :label => false %>
			<%= f.input :email, :placeholder => "email", :label => false  %>
			<%= f.input :password, :placeholder => "password", :label => false %>
			<%= f.input :password_confirmation, :placeholder => "confirmation", :label => false %>
			<%= f.submit "Sign up", :class => "btn btn-success btn-large" %>
		<% end %>
		Already a member? <%= link_to "Sign in", signin_path %>
</section><!--/ .hero-unit-->
