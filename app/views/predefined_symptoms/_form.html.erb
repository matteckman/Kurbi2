<%= simple_form_for @predefined_symptom, :html => { :class => 'form-vertical' } do |f| %>
  <fieldset>
    <legend>Add New Predefined Symptom</legend>

    <%= f.input :name, :label => 'Symptom Name' %>
    <%= f.input :symptom_category, :label => 'Symptom Category', :collection => ['Visual', 'Motor', 'Sensory', 'Coordination & Balance', 'Bowel, Bladder, and Sexual', 'Cognitive', 'Other'] %>
    <%= f.input :description, :label => 'Symptom Description', :as => :text, :input_html => 
    																	   { :rows => 5 }  %>
    
    
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', predefined_symptoms_path, :class => 'btn' %>
  </fieldset>
<% end %>
